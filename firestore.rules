rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES
     * 
     * Core Philosophy: 
     * 1. Admin Access: Specific users (by email) have full access to all data.
     * 2. User Ownership: Authorized users can create and manage their own reports.
     * 3. Access Control: Authorized users can read system configuration to verify access.
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the user is a designated administrator. */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'sasmithagnanodya@gmail.com' ||
        request.auth.token.email == 'supundinushaps@gmail.com' ||
        request.auth.token.email == 'caredrivelk@gmail.com'
      );
    }

    /** @description Checks if the user's email is authorized in the registry. */
    function isAuthorizedUser() {
      // Admins are always authorized. Others must be in the registry.
      return isAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/config/authorizedUsers));
    }

    // --- Collection Rules ---

    match /reports/{reportId} {
      allow read, create, update: if isAuthorizedUser();
      allow delete: if isAdmin();

      match /history/{historyId} {
        allow read, create: if isAuthorizedUser();
        allow update, delete: if isAdmin();
      }
    }

    match /config/{configDoc} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /layouts/{layoutId} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /layouts/config {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}