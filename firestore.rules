rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES
     * 
     * Core Philosophy: 
     * 1. Admin Access: Specific users (by email) have full access to all data.
     * 2. User Ownership: Users can create and manage their own reports.
     * 3. Config Access: Authenticated users can read app settings (like the password salt).
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the user is a designated administrator. */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'sasmithagnanodya@gmail.com' ||
        request.auth.token.email == 'supundinushaps@gmail.com' ||
        request.auth.token.email == 'caredrivelk@gmail.com' ||
        request.auth.token.email == 'caredrivelk@gmail.com'
      );
    }

    /** @description Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    /**
     * @description Rules for the main 'reports' collection.
     * Reports are accessible by all authenticated users for search, 
     * but only owners or admins can modify.
     */
    match /reports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Allow updates for report data and history tracking
      allow delete: if isAdmin();

      match /history/{historyId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin();
      }
    }

    match /config/settings {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /layouts/{layoutId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /layouts/config {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    /**
     * STORAGE RULES REFERENCE (Apply these in the Storage Tab)
     * match /b/{bucket}/o {
     *   match /report-images/{allPaths=**} {
     *     allow read, write: if request.auth != null;
     *   }
     * }
     */

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
