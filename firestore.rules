rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - CAREDRIVE V1.3
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the user is a designated administrator (Hardcoded or Dynamic). */
    function isAdmin() {
      let bootstrapAdmins = [
        'sasmithagnanodya@gmail.com',
        'supundinushaps@gmail.com',
        'caredrivelk@gmail.com'
      ];
      return isSignedIn() && (
        request.auth.token.email in bootstrapAdmins ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    /** @description Checks if the user's email is authorized in the registry. */
    function isAuthorizedUser() {
      return isAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/config/authorizedUsers));
    }

    // --- Dynamic Admin Registry ---
    match /admins/{adminId} {
      // Users can check their own admin status to avoid UI crashes
      allow get: if isSignedIn() && request.auth.uid == adminId;
      // Only the Super Admin can manage the registry
      allow list, write: if isSignedIn() && request.auth.token.email == 'sasmithagnanodya@gmail.com';
    }

    match /reports/{reportId} {
      allow read, create, update: if isAuthorizedUser();
      allow delete: if isAdmin();

      match /history/{historyId} {
        allow read, create: if isAuthorizedUser();
        allow update, delete: if isAdmin();
      }
    }

    match /config/{configDoc} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /layouts/{layoutId} {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /layouts/config {
      allow read: if isAuthorizedUser();
      allow write: if isAdmin();
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}