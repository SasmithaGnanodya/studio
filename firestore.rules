rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES
     * 
     * Core Philosophy: 
     * 1. Admin Access: Specific users (by email) have full access to all data.
     * 2. User Ownership: Users can create and manage their own reports.
     * 3. Config Access: Authenticated users can read app settings (like the password salt).
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the user is a designated administrator. */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'sasmithagnanodya@gmail.com' ||
        request.auth.token.email == 'supundinushaps@gmail.com' ||
        request.auth.token.email == 'caredrivelk@gmail.com'
      );
    }

    /** @description Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    /**
     * @description Rules for the main 'reports' collection.
     */
    match /reports/{reportId} {
      // Admins have full access to all reports
      allow read, write: if isAdmin();
      
      // Authenticated users can read, create, and update their own reports
      // We check both the top-level userId and the one inside reportData
      allow get: if isSignedIn();
      allow list: if isSignedIn(); 
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();

      /** @description History subcollection for audit trails. */
      match /history/{historyId} {
        allow read: if isSignedIn() && (get(/databases/$(database)/documents/reports/$(reportId)).data.userId == request.auth.uid || isAdmin());
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAdmin();
      }
    }

    /**
     * @description Rules for application configuration (e.g., private data password).
     */
    match /config/settings {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Rules for layout templates.
     */
    match /layouts/{layoutId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Legacy user-centric paths (from backend.json).
     */
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // --- Catch-all / Default Deny ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
